<mvc:View	controllerName="be.fiddle.BusinessObjectModel.controller.Monsters" 
			xmlns:html="http://www.w3.org/1999/xhtml" 
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns="sap.m">
	<Page title="{i18n>home}" id="pageContact"  showHeader="false" >
		<content>
			<table items="{monsters>/entries}">
				<columns>
					<Column width="12em"><Text text="Id" /></Column>
					<Column><Text text="Type" /></Column>
					<Column><Text text="Changes" /></Column>
				</columns>

				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier 	title="{monsters>name}"
												text="{monsters>id}"/>
							<Text text="{monsters>type}" />
							<ObjectNumber	number="{= ${monsters>changeRecords}.length }"
											unit="changes" />
						</cells>
					</ColumnListItem>
				</items>				
			</table>
		</content>
	</Page>
</mvc:View>