<mvc:View	controllerName="be.fiddle.BusinessObjectModel.controller.Monsters" 
			xmlns:html="http://www.w3.org/1999/xhtml" 
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns="sap.m"
			height="100%"
			displayBlock="true" >
	<Page	id="pageMonsters"  
			showHeader="false" 
			height="100%">
		<content>
			<Table items="{monsters>/entries}">
				<columns>
					<Column width="12em"><Text text="Id" /></Column>
					<Column><Text text="Type" /></Column>
					<Column><Text text="Changes" /></Column>
				</columns>

				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier 	title="{monsters>name}"
												text="{monsters>id}"/>
							<Text text="{monsters>type}" />
							<ObjectNumber	number="{= ${monsters>changeRecords}.length }"
											unit="changes" />
						</cells>
					</ColumnListItem>
				</items>				
			</Table>
		</content>
			
		<footer>
			<Toolbar>
				<Button text="Add" icon="sap-icon://add" press="onPressAdd" />
			</Toolbar>
		</footer>					
	</Page>
</mvc:View>