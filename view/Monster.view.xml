<mvc:View	controllerName="be.fiddle.BusinessObjectModel.controller.Monster" 
			xmlns="sap.m"
			xmlns:f="sap.ui.layout.form"
			xmlns:u="sap.ui.unified"
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns:core="sap.ui.core" 
			xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Page	id="pageMonster"  
			showHeader="false" 
			height="100%">
		<content>
			<HBox width="100%" class="sapUiSmallMargin">
				<VBox width="100%">
					<HBox alignItems="Center">
						<Label text="Id" width="7rem"/>
						<Text  text="{monsters>id}" width="10rem"/>
					</HBox>
					<HBox alignItems="Center">
						<Label text="Type" width="7rem"/>
						<Input value="{monsters>type}" width="10rem"/>
					</HBox>
					<HBox alignItems="Center">
						<Label text="Name" width="7rem"/>
						<Input value="{monsters>name}" width="10rem"/>
					</HBox>
					<HBox alignItems="Center">
						<Label text="Special Ability" width="7rem"/>
						<TextArea value="{monsters>specialAbility}" width="15rem" height="5rem"/>
					</HBox>
					<HBox alignItems="Center">
						<Label text="Picture" width="7rem"/>
						<u:FileUploader	id="fileUploader"
										name="myFileUpload"
										mimeType="image/png, image/jpeg, image/jpg"
										fileType="jpg,jpeg,gif,png]"
										buttonOnly="true"
										uploadOnChange="false"
										uploadUrl="{monsters>picture}"
										width="10rem"
										uploadComplete="onUploadComplete"
										change="onFileSelected"/>
					</HBox>
					<HBox>
						<Image src="{monsters>picture}" width="10rem" />
					</HBox>
				</VBox>
	
				<List	width="100%"
						showSeparators="Inner"
						items="{monsters>changeRecords}" 
						showNoData="false">
					<NotificationListItem
						title="Change"
						description="{path:'monsters>',formatter:'.getObjectAsJSON'}"
						showCloseButton="false"
						datetime="{	path:'monsters>timestamp', 
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										style: 'medium'
									}
								}"
						unread="false"
						priority="Low"
						press="onChangePress" />
				</List>
			</HBox>
			
			
			<!--I made this bit dynamic, just because I'm lazy. In reality, you would build specific views, bound to the businessobject directly-->
<!--			<VBox items="{pairs>/}">
				<HBox>
					<Input value="{pairs>key}" width="10rem" editable="{pairs>bKeyEditable}"/>
					<Input value="{pairs>value}"/>
				</HBox>
			</VBox>
			<Button text="additional property" icon="sap-icon://add" press="onPressAdditionalProperty" />
-->		</content>
			
		<footer>
			<Toolbar>
				<Button text="Save" icon="sap-icon://add" press="onPressSave" />
				<Button text="Cancel" icon="sap-icon://cancel" press="onPressCancel" />
			</Toolbar>
		</footer>					
	</Page>
</mvc:View>
