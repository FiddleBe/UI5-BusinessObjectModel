<mvc:View	controllerName="be.fiddle.BusinessObjectModel.controller.Monster" 
			xmlns="sap.m"
			xmlns:f="sap.ui.layout.form"
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns:core="sap.ui.core" 
			xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Page	id="pageMonster"  
			showHeader="false" 
			height="100%">
		<content>
			<!--I made this bit dynamic, just because I'm lazy. In reality, you would build specific views, bound to the businessobject directly-->
			<VBox items="{pairs>/}">
				<HBox>
					<Input value="{pairs>key}" width="10rem" editable="{pairs>bKeyEditable}"/>
					<Input value="{pairs>value}"/>
				</HBox>
			</VBox>
			<Button text="additional property" icon="sap-icon://add" press="onPressAdditionalProperty" />
		</content>
			
		<footer>
			<Toolbar>
				<Button text="Save" icon="sap-icon://add" press="onPressSave" />
				<Button text="Cancel" icon="sap-icon://cancel" press="onPressCancel" />
			</Toolbar>
		</footer>					
	</Page>
</mvc:View>