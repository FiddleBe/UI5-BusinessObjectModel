<mvc:View	controllerName="be.fiddle.BusinessObjectModel.controller.Monster" 
			xmlns="sap.m"
			xmlns:f="sap.ui.layout.form"
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns:core="sap.ui.core" 
			xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Page	id="pageMonster"  
			showHeader="false" 
			height="100%">
		<content>
			<f:SimpleForm	id="SimpleFormChange354wide"
							editable="true"
							layout="ResponsiveGridLayout"
							title="Address"
							labelSpanXL="4"
							labelSpanL="3"
							labelSpanM="4"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="0"
							emptySpanL="4"
							emptySpanM="0"
							emptySpanS="0"
							columnsXL="2"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false">
				<f:content>
					<Label text="Name" />
					<Input value="{monster>name}" />
					
					<Label text="Type" />
					<Input value="{monster>type}" />

					<Label text="special ability" />
					<Input value="{monster>ability}" />

				</f:content>
			</f:SimpleForm>			
		</content>
			
		<footer>
			<Toolbar>
				<Button text="Save" icon="sap-icon://add" press="onPressSave" />
				<Button text="Cancel" icon="sap-icon://add" press="onPressCancel" />
			</Toolbar>
		</footer>					
	</Page>
</mvc:View>